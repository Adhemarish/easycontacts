<div class="search-bar d-flex justify-content-between mt-3">
  <p class="ml-3 mt-2 tag">TAG</p>
  <%= form_tag dashboard_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "placeholder-search",
      placeholder: "Je cherche..."
    %>
  <% end %>
  <i class="fas fa-search mr-2 mt-2"></i>
</div>


<h3>Bienvenue <%=current_user.first_name.capitalize%> !</h3>


<%if params[:query].present?  %>

  <% if @contacts.any?%>
    <h4>----- Résultat de ma recherche</h4>

    <% @contacts.each do |contact| %>
    <%= contact.avatar%> <%= contact.first_name%> <%=contact.last_name%> <%= contact.phone_number %>
    <% end %>
  <% else %>
    <p>Aucun contact ne correspond à votre recherche.</p>
  <% end %>
<% end %>













