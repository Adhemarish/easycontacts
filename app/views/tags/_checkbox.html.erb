
<div class="form-check form-check-inline tag-form <%= tag.color %>
  <%= 'check-tag' if checked %>" data-checkbox-id="<%= tag.id %>">
  <input hidden type="checkbox"
         value="<%= tag.id %>"
         class="note-search-tags"
         name="note[tag_ids][]"
         id="note_tag_ids_<%=tag.id%>"
         <%= 'checked' if checked %> >
  <label class="<%= tag.color %> "  for="note_tag_ids_<%=tag.id%>">
    <%= tag.label.capitalize %>
  </label>
  <div>
    <%= link_to tag_path(tag), method: :delete, remote: true, data: { confirm: "Supprimer ce tag ? Il ne sera pas supprimé si il est associé à une note." }  do %>
      <p class="cross-tag">X</p>
    <% end %>
  </div>
</div>


